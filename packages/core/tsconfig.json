{
  "compilerOptions": {
    "baseUrl": ".",

    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": [
      "node",
      "typora"
    ],
    "skipLibCheck": true,
    "noImplicitAny": true,

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "typings",

    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
